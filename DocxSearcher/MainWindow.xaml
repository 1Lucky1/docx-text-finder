<Window x:Class="DocxSearcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Поиск в .docx файлах" Height="550" Width="750">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="694*"/>
            <ColumnDefinition Width="37*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Заголовок поиска -->
            <RowDefinition Height="Auto"/>
            <!-- Поле ввода текста -->
            <RowDefinition Height="Auto"/>
            <!-- Заголовок папки -->
            <RowDefinition Height="Auto"/>
            <!-- Поле выбора папки + кнопка Обзор -->
            <RowDefinition Height="Auto"/>
            <!-- Чекбокс -->
            <RowDefinition Height="Auto"/>
            <!-- Кнопка "Найти" -->
            <RowDefinition Height="Auto"/>
            <!-- Прогрессбар -->
            <RowDefinition Height="Auto"/>
            <!-- Статус -->
            <RowDefinition Height="*"/>
            <!-- Результаты -->
        </Grid.RowDefinitions>

        <!-- Ввод текста -->
        <Label Grid.Row="0" Content="Введите текст для поиска (Регистр не учитывается):" Grid.ColumnSpan="2" Margin="0,0,0,25" Grid.RowSpan="2"/>
        <TextBox x:Name="SearchText" Grid.Row="1" Height="25" Grid.ColumnSpan="2" Margin="0,0,0,36" Grid.RowSpan="2"/>

        <!-- Папка -->
        <Label Grid.Row="2" Content="Папка для поиска (По умолчанию - папка с программой):" Margin="0,10,0,20" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
        <Grid Grid.Row="3" Grid.ColumnSpan="2" Margin="0,0,0,25" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="FolderPath" Grid.Column="0" IsReadOnly="True"/>
            <Button x:Name="BrowseButton" Grid.Column="1" Content="Обзор" Width="70" Margin="5,0,0,0" Click="BrowseButton_Click"/>
        </Grid>

        <!-- Чекбокс рекурсии -->
        <CheckBox x:Name="SearchRecursively" Grid.Row="4" Content="Искать в подпапках?" Margin="0,10,0,40" Grid.ColumnSpan="2" Grid.RowSpan="2"/>

        <!-- Кнопка поиска -->
        <Button x:Name="SearchButton" Grid.Row="5" Content="Найти" Height="30" Click="SearchButton_Click" IsDefault="true" Margin="0,10,0,30" Grid.ColumnSpan="2" Grid.RowSpan="2"/>

        <!-- Прогрессбар -->
        <ProgressBar x:Name="ProgressBar" Grid.Row="6" Height="20" Margin="0,10,0,31"
                     Minimum="0" Maximum="100" Foreground="LimeGreen" Grid.ColumnSpan="2" Grid.RowSpan="2"/>

        <!-- Статус -->
        <Label x:Name="StatusLabel" Grid.Row="7" Content="" HorizontalAlignment="Left" Margin="5,5,0,281" Grid.RowSpan="2"/>

        <!-- Результаты -->
        <ListBox x:Name="ResultsListBox" Grid.Row="8" Margin="0,10,0,0"
                 HorizontalContentAlignment="Stretch"
                 MouseDoubleClick="ResultsListBox_MouseDoubleClick" Grid.ColumnSpan="2"/>
        <Label Content="Версия 1.1" HorizontalAlignment="Left" Margin="662,-13,0,0" VerticalAlignment="Top" FontSize="9" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
